doctype
html
  head
    title= (typeof(title) == 'undefined' ? "" : title)
    //- link(rel='stylesheet', href='/styles/bootstrap.css')
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    //- link(rel='stylesheet', href='/styles/style.css')
    link(type="image/png", rel="apple-touch-icon", href="https://s.chromaticlove.com/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="https://s.chromaticlove.com/favicon.png")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    != css('style')
    != js('application')
    - if (app.settings.env == "development")
      != js("jquery.chromaticlove")
    - else
      script(src="https://s.chromaticlove.com/js/jquery.chromaticlove.js")


  body
    header.container
      .row
        .span12
          .page-header
            .row
              .span9
                h1
                  a(href="/") ChromaticLove
                  small= title
              .span3.header-link
                - if (current_user != null)
                  a(href="/logout") Logout
                - else
                  a(href="/auth/instagram") Login
    section.container.messages-holder
      != messages()
    section.maincontent.container!= body
    footer.container.footer
      .row
        .span6
          | Copyright &copy; #{new Date().getFullYear()}
          &nbsp;
          a(href="http://forchesoftware.com") Forche Software
          &nbsp;
          | /
          &nbsp;
          a(href="http://twitter.com/sujal") @sujal
        .span1.offset3.footer-link
          a(href="/docs") Docs
        .span1.footer-link
          a(href="/faq") FAQ
        .span1.footer-link
          a(href="/about") About

    // Piwik
    script.
      var _paq = _paq || [];
      _paq.push(["setCookieDomain", "*.chromaticlove.com"]);
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//stats.forchesoftware.com/";
        _paq.push(['setTrackerUrl', u+'piwik.php']);
        _paq.push(['setSiteId', 3]);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
      })();
    noscript.
      p.
        img(src="//stats.forchesoftware.com/piwik.php?idsite=3", style="border:0;", alt="")
    // End Piwik Code
